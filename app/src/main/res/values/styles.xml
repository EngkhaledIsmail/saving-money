<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolbar_textView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="CustomProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_margin">16dp</item>
        <item name="android:src">@drawable/ic_add_white</item>
        <item name="backgroundTint">@color/colorPrimaryLight</item>
    </style>

    <style name="label_form_text_view" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="form_edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/background_edit_text</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">13dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="form_text_view" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/background_edit_text</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">13dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="submit_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/submit_button_selector</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
